{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dmzNSGName": {
      "type": "string",
      "defaultValue": "DMZ-WAP"
    },
    "adSubnetName": {
      "type": "string",
      "defaultValue": "adSubnet"
    },
    "adfsVMName": {
      "type": "string",
      "defaultValue": "AZADFS"
    },
    "adfsIP": {
      "type": "string",
      "metadata": { "description": "The IP Addresses assigned to the ADFS Server. Remember the first IP in a subnet is .4 e.g. 10.0.0.0/16 reserves 10.0.0.0-3. Specify one IP per server - must match numberofVMInstances or deployment will fail.s" },
      "defaultValue": "10.0.1.5"
    },
    "adDomainName": {
      "type": "string",
      "defaultValue": "contoso.com"
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username"
      }
    },
    "assetLocation": {
      "type": "string"
    },
    "dmzSubnetName": {
      "type": "string",
      "defaultValue": "adSubnet"
    },
    "location": {
      "type": "string",
      "metadata": {
        "Description": "The region to deploy the resources into"
      }
    },
    "NetworkInterfaceName": {
      "type": "string",
      "defaultValue": "NIC",
      "metadata": {
        "description": "This is the prefix name of the Network interfaces"
      }
    },
    "publicIPAddressDNSName": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "vnet"
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D1_v2",
      "metadata": {
        "description": "This is the allowed list of VM sizes"
      }
    },
    "wapVMName": {
      "type": "string",
      "defaultValue": "AZPROX"
    }
  },
  "variables": {    
    "shortDomainName": "[split(parameters('adDomainName'),'.')[0]]",    
    "DSCTemplate": "[concat(parameters('assetLocation'),'DSC/adfsDSC.zip')]",
    "adfsDSCConfigurationFunction": "adfsDSCConfiguration.ps1\\Main",
    "adfsNICName": "[concat('adfs-',parameters('NetworkInterfaceName'))]",    
    "adSubnetID": "[concat(variables('vnetID'),'/subnets/',parameters('adSubnetName'))]",
    "apiVersion": "2015-06-15",
    "computeApiVersion": "2016-04-30-preview",
    "dmzSubnetID": "[concat(variables('vnetID'),'/subnets/',parameters('dmzSubnetName'))]",
    "domainJoinOptions": "3",
    "imageOffer": "WindowsServer",
    "imagePublisher": "MicrosoftWindowsServer",
    "imageSKU": "2019-Datacenter",
    "publicIPAddressDNSName": "[tolower(parameters('publicIPAddressDNSName'))]",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "wapDSCConfigurationFunction": "wapDSCConfiguration.ps1\\Main",
    "wapNICName": "[concat('wap-',parameters('NetworkInterfaceName'))]",
    "wapPubIpName": "WAPPubIP"
  },
  "resources": [    
    {
      "name": "[variables('wapPubIpName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[parameters('location')]",      
      "apiVersion": "[variables('apiVersion')]",
      "tags": {
        "displayName": "wapPubIp"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[tolower(variables('publicIPAddressDNSName'))]"
        }
      }
    },
    {
      "apiVersion": "[variables('apiVersion')]",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('adfsNICName')]",
      "location": "[parameters('location')]",      
      "tags": { "displayName": "adfsNIC" },      
      "properties": {
        "ipConfigurations": [
          {
            "name": "adfsipconfig",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('adfsIP')]" ,              
              "subnet": {
                "id": "[variables('adSubnetID')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "[variables('apiVersion')]",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('wapNICName')]",
      "location": "[parameters('location')]",     
      "tags": { "displayName": "wapNIC" },
      "dependsOn": [
        "[variables('wapPubIpName')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "wapipconfig",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('wapPubIpName'))]"
              },
              "subnet": {
                "id": "[variables('dmzSubnetId')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "[variables('computeApiVersion')]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('adfsVMName')]",
      "location": "[parameters('location')]",    
      "tags": { "displayName": "adfsVM" },
      "dependsOn": [
        "[variables('adfsNICName')]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('adfsVMName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('imageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {              
              "id": "[resourceid('Microsoft.Network/networkInterfaces', variables('adfsNICName'))]"
            }
          ]
        }
      },
      "resources": [
      ]
    },
    {
      "apiVersion": "[variables('apiVersion')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('adfsVMName'), '/joindomain')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[parameters('adfsVMName')]"
      ],
      "tags": {
        "displayName": "adfsVMJoin",
        "isClient": "true"
      },     
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('adDomainName')]",
          "OUPath": "",
          "User": "[concat(variables('shortDomainName'), '\\', parameters('adminUsername'))]",
          "Restart": "true",
          "Options": "[variables('domainJoinOptions')]"
        },
        "protectedsettings": {
          "Password": "[parameters('adminPassword')]"
        }
      }
    },
    {
      "apiVersion": "[variables('computeApiVersion')]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('wapVMName')]",
      "location": "[parameters('location')]",      
      "tags": { "displayName": "wapVM" },
      "dependsOn": [
        "[variables('wapNICName')]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('wapVMName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('imageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceid('Microsoft.Network/networkInterfaces', variables('wapNICName'))]"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
  }
}
