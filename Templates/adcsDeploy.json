{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dmzNSGName": {
      "type": "string",
      "defaultValue": "DMZ-WAP"
    },
    "adSubnetName": {
      "type": "string",
      "defaultValue": "adSubnet"
    },
    "adcsVMName": {
      "type": "string",
      "defaultValue": "AZADCS"
    },
    "adcsIP": {
      "type": "string",
      "metadata": { "description": "The IP Addresses assigned to the domain controllers (a, b). Remember the first IP in a subnet is .4 e.g. 10.0.0.0/16 reserves 10.0.0.0-3. Specify one IP per server - must match numberofVMInstances or deployment will fail.s" },
      "defaultValue": "10.0.1.5"
    },
    "adDomainName": {
      "type": "string",
      "defaultValue": "contoso.com"
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username"
      }
    },
    "deploymentNumber": {
      "type": "string",
      "defaultValue": "1",
      "metadata": {
        "description": "When deploying the stack N times, define the instance - this will be appended to some resource names to avoid collisions."
      }
    },    
    "location": {
      "type": "string",
      "metadata": {
        "Description": "The region to deploy the resources into"
      }
    },
    "NetworkInterfaceName": {
      "type": "string",
      "defaultValue": "NIC",
      "metadata": {
        "description": "This is the prefix name of the Network interfaces"
      }
    },    
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "vnet"
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D1_v2",
      "metadata": {
        "description": "This is the allowed list of VM sizes"
      }
    }    
  },
  "variables": {    
    "shortDomainName": "[split(parameters('adDomainName'),'.')[0]]",    
    "adcsNICName": "[concat('adcs-',parameters('NetworkInterfaceName'))]",
    "adcsPubIpName": "[concat('ADCSPubIP', parameters('deploymentNumber'))]",
    "adSubnetID": "[concat(variables('vnetID'),'/subnets/',parameters('adSubnetName'))]",
    "apiVersion": "2015-06-15",
    "computeApiVersion": "2016-04-30-preview",    
    "domainJoinOptions": "3",
    "imageOffer": "WindowsServer",
    "imagePublisher": "MicrosoftWindowsServer",
    "imageSKU": "2019-Datacenter",    
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]" 
  },
  "resources": [
    {
      "name": "[variables('adcsPubIpName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[parameters('location')]",      
      "apiVersion": "[variables('apiVersion')]",
      "tags": {
        "displayName": "adcsPubIp"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[tolower(parameters('adcsVMName'))]"
        }
      }
    },    
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('adcsNicName')]",
      "location": "[parameters('location')]",
      "tags": { "displayName": "adcsNIC" },
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('adcsPubIPName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[concat('ipconfig', parameters('deploymentNumber'))]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "subnet": {
                "id": "[variables('adSubnetID')]"
              },
              "privateIPAddress": "[parameters('adcsIP')]",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('adcsPubIPName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "[variables('computeApiVersion')]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('adcsVMName')]",
      "location": "[parameters('location')]",    
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('adcsNicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('adcsVMName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('imageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[concat('Microsoft.Network/networkInterfaces/', variables('adcsNicName'))]"
            }
          ]
        }
      },
      "resources": [
      ]
    },
    {
      "apiVersion": "[variables('apiVersion')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('adcsVMName'), '/joindomain')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', concat(parameters('adcsVMName')))]"
      ],
      "tags": {
        "displayName": "adcsVMJoin",
        "isClient": "true"
      },      
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('adDomainName')]",
          "OUPath": "",
          "User": "[concat(variables('shortDomainName'), '\\', parameters('adminUsername'))]",
          "Restart": "true",
          "Options": "[variables('domainJoinOptions')]"
        },
        "protectedsettings": {
          "Password": "[parameters('adminPassword')]"
        }
      }
    }
  ],
  "outputs": {
  }
}
